<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{body}}</p>
  <p style="font-size: 15px;">Created by {{user.name}} on {{format_date date_created}}</p>
  <p>{{comment_body}}</p>
</div>

{{#if logged_in}}

<form class="comment-form">
        <div class="input-field comment-field">
            <label>Comment:</label>
            <textarea type="text" id="comment" rows="20" placeholder="What's on your mind?"></textarea>
        </div>
        <input type="hidden" name="post-id" value="{{post.id}}">
        <button class="submit-btn1" type="submit">Add Comment</button>
    </form>

{{/if}}
<script src='../public/js/comments.js'></script>

